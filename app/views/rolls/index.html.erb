})


var rollHistory = new Vue({
  el: '#roll-history',
  data: {
    rolls: [null, null, null, null, null],
    counter: 0
  },
    methods: {
    addBuff: function () {
      this.rolls.push(calculated_buffs()) 
      this.rolls.splice(0,1)
      this.counter += 1;
    }
  },
});

