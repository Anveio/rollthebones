<script>
const BUFFS = ["Grand Melee", "Jolly Roger", "Buried Treasure", "Broadsides", "Shark Infested Waters", "True Bearing"]

var newRoll = function generateRolls() {
  let roll = []
  BUFFS.forEach(buff => roll.push(BUFFS[Math.floor(Math.random() * BUFFS.length)]))
  return roll
}

var frequencies = function findFrequencies(ary) {
  return ary.reduce((counter, item) => {
    let p = item;
    counter[p] = counter.hasOwnProperty(p) ? counter[p] + 1 : 1;
    return counter;
  }, {})
}

var modes = function findModes(histogram) {
  ret = histogram
  let mode = Math.max(...Object.values(ret))

  Object.keys(ret).forEach(key => {
    if (ret[key] != mode) delete ret[key];
  });
  
  return Object.keys(ret);
}

var formattedAsKebabCase = function formatAsKebabCase(arr) {
  return arr.map(element => {
    return element.split(" ").join("-").toLowerCase();
  })
}

var formattedAsSnakeCase = function formatAsSnakeCase(arr) {
  return arr.map(element => {
    return element.split(" ").join("_").toLowerCase();
  })
}

var sorted_array_of_buffs = function sort_array_of_buffs(arr) {
  return arr.sort()
}

var calculated_buffs = function calculate_buffs() {
  let roll = { 
    grand_melee: null,
    buried_treasure: null,
    jolly_roger: null,
    broadsides: null,
    shark_infested_waters: null,
    true_bearing: null
  }
  let buffs = formattedAsSnakeCase(modes(frequencies(newRoll())))
  
  
  Object.keys(roll).forEach(key => {
    if (buffs.includes(key)) roll[key] = true;
  });
  
  return roll
}

Vue.component('buff-icon', {
  props: ['presence'],
  template: '<li>{{ presence }}</li>'
})

Vue.component('roll-display', {
